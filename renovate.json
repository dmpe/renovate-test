{
  "enabledManagers": [
    "regex"
  ],
  "extends": ["config:base", "docker:enableMajor"], 
  "regexManagers": [
    {
      "fileMatch": [
        "control_values.yaml.gotmpl"
      ],
      "matchStrings": [
        "depName=(?<depName>.*?)\n\n *tag: (?<currentValue>.*?)\n"
      ], 
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "enabled": true,
      "commitMessageTopic": "container image {{depName}}"
    }
  ]
}
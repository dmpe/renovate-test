{
  "enabledManagers": [
    "regex"
  ],
  "regex": {
    "fileMatch": [
      "control_values.yaml.gotmpl"
    ]
  },
  "regexManagers": [
    {
      "fileMatch": [
        "control_values.yaml.gotmpl"
      ],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "name=(?<depName>.*)\n *tag: (?<currentValue>.*)"
      ],
      "registryUrlTemplate": "https://index.docker.io",
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "enabled": true,
      "registryUrls": ["https://index.docker.io"],
      "commitMessageTopic": "container image {{depName}}"
    }
  ]
}
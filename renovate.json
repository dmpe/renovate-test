{
  "enabledManagers": [
    "regex"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "control_values.yaml.gotmpl"
      ],
      "matchStrings": [
        "datasource=(?<datasource>.*?) depName=(?<depName>.*?) tag=(?<currentValue>.*?)\n"
      ]
    }
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "enabled": true,
      "commitMessageTopic": "container image {{depName}}"
    }
  ]
}
{
  "enabledManagers": [
    "regex"
  ],
  "regex": {
    "fileMatch": [
      "control_values.yaml.gotmpl"
    ]
  }, 
  "regexManagers": [
    {
      "fileMatch": [
        "control_values.yaml.gotmpl"
      ],
      "matchStringsStrategy": "recursive",
      "matchStrings": [
        "repository: \\{\\{ \\.Values\\.nexus \\}\\}.+", 
        "(?<depName>[^repository: \\{\\{ \\.Values\\.nexus \\}\\}\/].+)\n*tag:\\s*\"(?<currentValue>.*?)\""
      ],
      "datasourceTemplate": "docker"
    }
  ]
}